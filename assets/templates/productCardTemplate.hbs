<div class="grid-item card text-white bg-dark mb-3" style="max-width: 18rem;"
     onmousedown="updateProductCount(this, event)">
    <p class="sku-number" hidden>{{product.sku_number}}</p>
    <div class="card-header emoji" style="display: flex; justify-content: space-between; align-items: center">
        <div style="display: inline">{{product.icon}}</div>
        <span class="badge badge-pill badge-primary" style="font-size: 20px;">0</span>
        <div class="card-subtitle" style="display: inline">{{product.price}} kr</div>
    </div>
    <div class="card-body" style="display: inline">
        <h4 class="card-title">{{product.name}}</h4>
        <p class="card-text">{{product.description}}</p>
    </div>
</div>
